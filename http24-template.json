{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "httpd",
    "annotations": {
      "description": "Application template for httpd server.",
      "iconClass": "icon-load-balancer",
      "tags": "http, httpd, apache, webserver, php, perl"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${HTTPD_SERVICE_NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "server-http-port",
            "port": 8080,
            "protocol": "TCP"
          },
          {
            "name": "server-https-port",
            "port": 8443,
            "protocol": "TCP"
          }
        ],
        "selector": {
          "name": "${HTTPD_SERVICE_NAME}"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "labels": {
          "app": "${HTTPD_SERVICE_NAME}"
        },
        "name": "${HTTPD_SERVICE_NAME}"
      },
      "spec": {
        "host": "${HTTPD_EXTERNAL_HOST}",
        "port":{
          "targetPort":"server-http-port"
        },
        "to": {
          "kind": "Service",
          "name": "${HTTPD_SERVICE_NAME}"
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${HTTPD_SERVICE_NAME}"
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${HTTPD_SERVICE_NAME}"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "${HTTPD_SERVICE_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${HTTPD_SERVICE_NAME}",
                "image": "${HTTPD_IMAGE}:${HTTPD_IMAGE_VERSION}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 8443,
                    "protocol": "TCP"
                  }
                ],
                "livenessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 8080
                  },
                  "initialDelaySeconds": 600,
                  "timeoutSeconds": 5,
                  "periodSeconds": 60,
                  "successThreshold": 1,
                  "failureThreshold": 2
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 8080
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 5,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 1
                },
                "imagePullPolicy": "IfNotPresent"
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "HTTPD_SERVICE_NAME",
      "displayName": "Service Name",
      "description": "The name of the OpenShift Service for httpd server.",
      "value": "httpd24",
      "required": true
    },
    {
      "name": "HTTPD_IMAGE",
      "value": "registry.access.redhat.com/rhscl/httpd-24-rhel7",
      "description": "The name of the image",
      "required": true
    },
    {
      "name": "HTTPD_IMAGE_VERSION",
      "value": "latest",
      "description": "The version for the HTTPD_IMAGE",
      "required": true
    },
    {
      "name": "HTTPD_EXTERNAL_HOST",
      "value": "",
      "description": "External host used to create router. Autogenerated if empty.",
      "required": false
    }
  ],
  "labels": {
    "template": "apache-httpd-template"
  }
}